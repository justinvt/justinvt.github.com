    .employment.section
      %h3 Employment Experience

      - Resume["employment"].reverse.each do |emp|
        .employ
          %h4.title 
            - unless emp["employer"].nil?
              .employer= emp["employer"]
            - unless emp["position"].nil?
              .position= emp["position"]
          .date
            = emp["date"].to_a.join(" - ")
          .description
            = BlueCloth.new(emp["description"]).to_html

