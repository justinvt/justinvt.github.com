%head
  %title vg
  %link{ :rel=>"stylesheet", :href=>"farbtastic.css"}
  %script{ :type => "text/javascript", :src => "jquery.js"}
  %script{ :type => "text/javascript", :src => "farbtastic.js"}
  %script{ :type => "text/javascript", :src => "palette.js"}
  :javascript
     $(document).ready(function(){ $(".pal").colorPicker() })
  %style{:type => "text/css"}
    :sass
      body
        font-family: "Helvetica", Arial
        line-height: 1.8em
        letter-spacing: -0.02em
        background: #fff
        text-align: center
        text-transform: uppercase
      a
        text-decoration: underline
      h1, h2, h3
        font-weight: normal
      ul
        -moz-padding-start: 0
        margin: 0
        padding: 0
      li
        float: left
        list-style-type: none
        margin: 0 10px 0 0
        padding: 0
        color: #666
      .container
        margin: auto
        width: 800px
      .header, .footer
        height: 30px
        margin: 20px 0 0 0
        border-radius: 10px
        -moz-border-radius: 10px
        padding: 10px 20px
      .info
        margin: 20px 0 0 0
        background: #3cf
        height: 400px
        background: #036
      .selections
        background: #e6e6e6
        height: 80px
        border: solid 1px #f3f3f3
        ul
          margin: 20px 0 0 0
        li
          width: 100px
          text-align: center
          color: #666
          padding: 5px
          background: #eee
          margin: 0 0 10px 20px
          border: solid 1px #eee
        .content
          visible: hidden
     

%body
  .container
    .header
    .content
      %div
        .pal
    .footer
